          <h2 class="uk-module-title-alt uk-margin-large-bottom">__ Our most loved dishes __</h2>
          <div class="carousel">
          <!--<div class="uk-grid">-->
            <% Dish.joins(:order_dishes).group("dishes.id").order("count(dishes.id) desc").limit(10).each do |dish| %>
              <div class="uk-width-medium-1-4">
                <h3 class="uk-margin-small">
                  <%= link_to dish.name, dish_path(dish) %>
                </h3>
                <ul class="tm-rating">
                  <li><i class="uk-icon-star fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="uk-icon-star fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="uk-icon-star fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="uk-icon-star fa fa-star" aria-hidden="true"></i></li>
                  <li><i class="uk-icon-star fa fa-star" aria-hidden="true"></i></li>
                </ul>
              <%= link_to dish_path(dish) do %>
                <%= image_tag dish.image, onerror: "this.src='https://t4.ftcdn.net/jpg/01/07/86/19/500_F_107861953_YZ800J1eDVtaEVAMXj1KRpez6efJpm7D.jpg';",
                  class:"hot-dish", tittle: dish.name %>
              <% end %>
                <p style="min-height: 80px;font-size: 16px">
                  <%= truncate dish.description, length: 100, omission: "... (continue)" %>
                </p>
                <p class="tm-price">$<%= dish.price %></p>
              </div>
            <% end %>
          <!--</div>-->
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
